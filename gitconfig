[core]
	excludesfile = $HOME/.dotfiles/gitignore_global
	editor = vim
[include]
	path = ~/.dotfiles/gitconfig_local
[alias]
	ci = commit 
	ca = commit -av
	co = checkout
	cm = checkout master
	br = branch
	lg = log --stat --max-count=5
	st = status
	throw = reset --hard HEAD
	throwh = reset --hard HEAD^
[color]
	ui = true
[push]
	default = current

